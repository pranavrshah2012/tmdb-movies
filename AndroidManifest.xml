<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pranav.tmdb_api_movie"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pranav.tmdb_api_movie.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pranav.tmdb_api_movie.TMDBSearchResultActivity"
            android:label="@string/title_activity_imdbsearch_result" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pranav.tmdb_api_movie.Now_Viewing"
            android:label="@string/title_activity_now__viewing" >
        </activity>
        <activity
            android:name="com.pranav.tmdb_api_movie.ImageDownload"
            android:label="@string/title_activity_image_download" >
        </activity>
        <activity
            android:name="com.pranav.tmdb_api_movie.Display_With_Image"
            android:label="@string/title_activity_display__with__image" >
        </activity>
          <activity
            android:name="com.pranav.tmdb_api_movie.Detailed_View"
            android:label="@string/title_activity_detailed__view" >
        </activity>
        
    </application>

</manifest>